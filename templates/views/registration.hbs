  <div class="col-md-7 col-lg-8 my-4 container bg-light">

    <h2 class="mb-3 text-lg-center">Ever Care Hospital</h2>
    <h5 class="mb-3 text-xl-center"> Patient Registration Form</h5>

    <hr class="my-4" />

    <form class="needs-validation my-3" id="myForm" action="/api/v1/patients/register" method="post">
      <div class="row g-3">
        <div class="col-12">
          <label for="firstName" class="form-label require">Name</label>
          <input type="text" class="form-control" name="name" required />
          <div class="invalid-feedback">Valid Name is required.</div>
        </div>

        <div class="col-12">
          <label for="email" class="form-label require">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required />
        </div>

        <div class="col-12">
          <label for="Password" class="form-label require">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="****"
            required />
        </div>

        <div class="col-12">
          <label for="CnfrmPassword" class="form-label require">Confirm Password</label>
          <input type="password" class="form-control" id="CnfrmPassword" name="Confirmpassword" placeholder="****"
            required />

        </div>

        <div class="row my-3">
          <div class="col-sm-6">
            <label for="gender" class="form-label require">Gender</label>
            <select class="form-select" id="gender" name="gender" required>
              <option value="">Select...</option>
              <option>Female</option>
              <option>Male</option>
              <option>Others</option>
            </select>
            <div class="invalid-feedback">Please provide a gender.</div>
          </div>
        </div>

        <div class="col-12">
          <label for="phone" class="form-label require">Phone</label>
          <input type="tel" class="form-control" name="phone" required placeholder="+92-xxx-xxxxxxx">
          <div class="invalid-feedback">
            Please enter a valid phone number for adding patient.
          </div>
        </div>

        <div class="col-12 my-3">
          <label for="birthday" class="form-label require">Date of Birth</label>
          <input type="date" id="birthday" name="date" class="form-control" placeholder="" required>
        </div>

        <div class="col-12">
          <label for="address" class="form-label require">Address</label>
          <textarea type="text" class="form-control" id="address" name="address" placeholder="1234 Main St" required
            rows="4" cols="50" /></textarea>
          <div class="invalid-feedback">Please enter your address.</div>

          <div class="my-0"></div>
        </div>

        <div class="col-12 my-3">
          <label for="illness" class="form-label">Reason for seeing the doctor:</label>
          <textarea type="text" class="form-control" id="address" name="Sickness" placeholder="Feeling Fever" required
            rows="2" cols="50" /></textarea>
        </div>

        <div class="col-12 my-3">
          <label for="registration" class="form-label require">Registration Date</label>
          <input type="date" id="registration" name="registration" class="form-control" placeholder="" required>
        </div>

      </div>

      <hr class="my-4" />

      <button class="btn btn-primary submit-btn">Register Patient</button>

    </form>
