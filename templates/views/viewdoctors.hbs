<!DOCTYPE html>
<html lang="en">


<!-- doctors23:12-->

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="/internallcss/assets/img/favicon.ico">
    <title>View Doctors</title>
    <link rel="stylesheet" type="text/css" href="/internallcss/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/internallcss/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/internallcss/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="/internallcss/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="/internallcss/assets/css/style.css">
    <!--[if lt IE 9]>
		<script src="assets/js/html5shiv.min.js"></script>
		<script src="assets/js/respond.min.js"></script>
	<![endif]-->
</head>

<body>
    <div class="main-wrapper">
        {{>header}}
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3">
                        <h4 class="page-title">Doctors</h4>
                    </div>
                    <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="/addDoctor" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i>
                            Add Doctor</a>
                    </div>
                </div>

                <div class="row doctor-grid">
                    {{#each doctor}}
                    <div class="col-md-4 col-sm-4  col-lg-3">
                        <div class="profile-widget">
                            <div class="doctor-img">
                                <a class="avatar" href="profile.html"><img alt=""
                                        src="/internallcss/assets/img/doctor-thumb-{{@index}}.jpg"></a>
                            </div>
                            <div class="dropdown profile-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown"
                                    aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <form action="/api/v1/doctors/{{doctor_id}}" method="post"><button
                                            class="dropdown-item"><i class="fa fa-pencil m-r-5"></i>
                                            Edit</button></form>
                                    <form action="/api/v1/doctors/delete/{{doctor_id}}" method="post"><button
                                            class="dropdown-item"><i class="fa fa-pencil m-r-5"></i>
                                            Delete</button></form>
                                    {{!-- <a class="dropdown-item" href="/api/v1/doctors/delete/{{doctor_id}}"
                                        data-toggle="modal" data-target="#delete_doctor"><i
                                            class="fa fa-trash-o m-r-5"></i> Delete</a> --}}
                                </div>
                            </div>
                            <h4 class="doctor-name text-ellipsis"><a href="profile.html">{{name}}</a></h4>
                            <div class="doc-prof">{{Department}}</div>
                            <div class="user-country">
                                <i class="fa fa-map-marker"></i> {{address}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

            </div>

        </div>

    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="/internallcss/assets/js/jquery-3.2.1.min.js"></script>
    <script src="/internallcss/assets/js/popper.min.js"></script>
    <script src="/internallcss/assets/js/bootstrap.min.js"></script>
    <script src="/internallcss/assets/js/jquery.slimscroll.js"></script>
    <script src="/internallcss/assets/js/select2.min.js"></script>
    <script src="/internallcss/assets/js/moment.min.js"></script>
    <script src="/internallcss/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/internallcss/assets/js/app.js"></script>
</body>


<!-- doctors23:17-->

</html>