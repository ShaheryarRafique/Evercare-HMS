<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="/internallcss/assets/img/favicon.ico">
    <title>View Departments</title>
    <link rel="stylesheet" type="text/css" href="/internallcss/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/internallcss/assets/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="/internallcss/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/internallcss/assets/css/style.css">
    <!--[if lt IE 9]>
		<script src="assets/js/html5shiv.min.js"></script>
		<script src="assets/js/respond.min.js"></script>
	<![endif]-->
</head>

<body>
    <div class="main-wrapper">
        {{>header }}
        <div class="page-wrapper">
            <div class="content">
                {{#if message}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong>
                    {{message}}.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                {{/if}}
                <div class="row">
                    <div class="col-sm-5 col-5">
                        <h4 class="page-title">Departments</h4>
                    </div>
                    <div class="col-sm-7 col-7 text-right m-b-30">
                        <a href="/addDepartment" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Add
                            Department</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table mb-0 datatable">
                                <thead>
                                    <tr>
                                        <th>Dept.Id</th>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Head</th>
                                        <th>Total Rooms</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each department}}
                                    <tr>
                                        <td>{{Dept_id}}</td>
                                        <td>{{name}}</td>
                                        <td>{{address}}</td>
                                        <td>{{HOD}}</td>
                                        <td>{{totalRooms}}</td>
                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <form action="/api/v1/departments/{{Dept_id}}" method="post"><button
                                                        class="dropdown-item"><i class="fa fa-pencil m-r-5"></i>
                                                        Edit</button></form>
                                                <form action="/api/v1/departments/delete/{{Dept_id}}" method="post">
                                                    <button class="dropdown-item"><i class="fa fa-pencil m-r-5"></i>
                                                        Delete</button></form>
                                                {{!-- <a class="dropdown-item" href="/api/v1/doctors/delete/{{Dept_id}}"
                                                    data-toggle="modal" data-target="#delete_doctor"><i
                                                        class="fa fa-trash-o m-r-5"></i> Delete</a> --}}

                                            </div>

                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="/internallcss/assets/js/jquery-3.2.1.min.js"></script>
    <script src="/internallcss/assets/js/popper.min.js"></script>
    <script src="/internallcss/assets/js/bootstrap.min.js"></script>
    <script src="/internallcss/assets/js/jquery.dataTables.min.js"></script>
    <script src="/internallcss/assets/js/dataTables.bootstrap4.min.js"></script>
    <script src="/internallcss/assets/js/jquery.slimscroll.js"></script>
    <script src="/internallcss/assets/js/app.js"></script>
</body>


<!-- departments23:21-->

</html>