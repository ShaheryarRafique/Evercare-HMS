<div class="form-group">
    <label for="validationCustom01">Department ID<span class="text-danger">*</span></label>
    <input class="form-control" type="text" id="validationCustom01" value="{{this.Dept_id}}" name="dept_id" disabled>
    <div class="invalid-feedback">
        Looks good!
    </div>
</div>

<div class="form-group">
    <label for="validationCustom01">Department Name<span class="text-danger">*</span></label>
    <input class="form-control" type="text" id="validationCustom01" value="{{this.name}}" name="name" required>
    <div class="invalid-feedback">
        Looks good!
    </div>
</div>
<div class="form-group">
    <label for="validationCustom02">Address<span class="text-danger">*</span></label>
    <textarea cols="30" rows="4" class="form-control" id="validationCustom02"  name="address" required>{{this.address}}</textarea>
    <div class="invalid-feedback">
        Please provide a Address.
    </div>
</div>
<div class="form-group">
    <label for="validationCustom03">Head<span class="text-danger">*</span></label>
    <input class="form-control" type="text" id="validationCustom03" value="{{this.HOD}}" name="head" required>
    <div class="invalid-feedback">
        Please provide a Head name.
    </div>
</div>
<div class="form-group">
    <label for="validationCustom04">Total Rooms<span class="text-danger">*</span></label>
    <input class="form-control" type="number" name="rooms" id="validationCustom04" value="{{this.totalRooms}}" min="1" max="50" required>
    <div class="invalid-feedback">
        Please provide a valid room quantity.
    </div>
</div>
